{
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "amd": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "no-undef": 2,
    "semi": [2, "always"],
    "object-curly-spacing": [2, "always"],
    "no-useless-concat": 2,
    "prefer-template": 0
  }
}
